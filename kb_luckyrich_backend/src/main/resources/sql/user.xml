<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mul.cam.e.dao.UserDao">
    <select id="userCheck" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*)
        from user
        where email=#{email}
    </select>

    <insert id="register" parameterType="mul.cam.e.dto.UserDto">
        insert into user(user_name, email)
        values (#{user_name}, #{email})
    </insert>

    <select id="login" parameterType="java.lang.String" resultType="mul.cam.e.security.UserDetail">
        select user_name, email, gender, age
        from user
        where email=#{email}
    </select>
</mapper>