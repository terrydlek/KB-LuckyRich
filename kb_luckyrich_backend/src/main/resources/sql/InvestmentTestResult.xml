<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mul.cam.e.dao.InvestmentTestResultDao">
    <insert id="insertResult">
        insert into investment_test_results (user_id, investment_type)
        values (#{userId}, #{investmentType})
    </insert>

    <select id="findByUserId" resultType="mul.cam.e.dto.InvestmentTestResultDto">
        select *
        from investment_test_results
        where user_id = #{userId}
    </select>

    <delete id="deleteByUserId" parameterType="string">
        DELETE
        FROM investment_test_results
        WHERE user_id = (select user_id from user where user_name = #{userName});
    </delete>
</mapper>